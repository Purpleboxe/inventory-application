extends layout

block content
    section
        h1= title

        form(method="POST")
            .form-group
                label(for="name") Name
                input#name(type="text" name="name" placeholder="Item name" required value=(item && item.name ? item.name : ''))
            .form-group
                label(for="description") Description
                input#description(type="textarea" name="description" placeholder="Item description" required value=(item && item.description ? item.description : ''))
            .form-group
                label(for="price") Price
                input#price(type="number" name="price" placeholder="Item price" required value=(item && item.price ? item.price : ''))
            .form-group
                label(for="number_in_stock") Number In Stock
                input#number_in_stock(type="number" name="number_in_stock" placeholder="Number in stock" required value=(item && item.number_in_stock ? item.number_in_stock : ''))

            .form-group
            label Category:
            .categories
                if categories && categories.length > 0
                    for category in categories
                        if category.checked
                            label(for=category.id) #{category.name}
                                input.checkbox-input(type='checkbox', name='category', id=category.id, value=category.id, checked)
                        else
                            label(for=category.id) #{category.name}
                                input.checkbox-input(type='checkbox', name='category', id=category.id, value=category.id)
                else 
                    p There are no categories

            .form-group
                button(type="submit") Submit

        if errors && errors.length
            ul
                each error in errors
                    li= error.msg
